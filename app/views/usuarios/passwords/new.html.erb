<div class="contenedorlogin">
<div class="center-block">

  <div class="form-group has-success has-feedback">

<h2><center>¿Olvidaste tu contraseña?</center></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

   <div class="campologin">
    <%= f.label :email %>
    <%= f.email_field :email, class:'form-control' %>
  </div>

  <div class= "campologin">
    <center><%= f.submit "Enviar instrucciones", class: "btn btn-success btn-lg" %>
    <%= link_to "Volver", hospedajes_path, class: 'btn btn-warning btn-lg' %></center>
  </div>

<% end %>

<% resource.errors.each do |atributo, mensaje| %>
      <%if(mensaje!="can't be blank") && (mensaje!="is invalid") then %>
          <div class="alert alert-danger">
            <%= mensaje %>
          </div>
      <%end%>
<% end %>


</div>
</div>
</div>
