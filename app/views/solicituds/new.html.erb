<div class="centrado">
<h2><CENTER>Â¿Desea solicitar este hospedaje?</CENTER></h2>
  <div class="col-md-6 col-md-offset-3">
      <%= form_for (@solicitud) do |s|  %>
        <div class="form-group has-success has-feedback">
          <div class="centrado2">
           <%= label_tag "Fecha de inicio" %>
            <%= s.date_field :fechainic, required: true, placeholder: 'Ingrese la fecha de inicio de su estadia',class:"form-control" %>
            <%= label_tag "Fecha de fin" %>
            <%= s.date_field :fechafin, required: true, placeholder: 'Ingrese la fecha de fin de su estadia',class:"form-control" %>  
            <%= s.hidden_field :hospedaje_id %>
          </div>
        </div>

        <div class="centrado4"
          <CENTER><%= s.submit "Aceptar", class: "btn btn-success btn-lg" %> 
          <%= link_to "Volver", hospedajes_path, class: 'btn btn-warning btn-lg' %></CENTER>   
        </div>
    <% end %> 
 </div>
 <% if notice && notice== "Fechas invalidas" %>
    <div class="alert alert-warning centrado5"> <p><%= notice %> </p> </div>
  <% elsif notice && notice== "Se ha enviado la solicitud" %>
    <div class="alert alert-success centrado5"> <p><%= notice %> </p> </div>
 <% end %>
</div>