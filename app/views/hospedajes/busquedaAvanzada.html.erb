<div class="centrado">

	<h2><CENTER>Busqueda Avanzada</CENTER></h2>

	<div class="col-md-6 col-md-offset-3">
			<h6><CENTER>Complete todos los casilleros correspondientes a los criterios con que desea buscar un hospedaje</CENTER></h6>
		<div class="form-group has-success has-feedback">
			<%= form_tag '/hospedajes', :method => "get" do  %>
	
				<%= label_tag "Capacidad" %><br/>
			    <%= number_field_tag :capMin , params[:capMin] ,pattern:"[0-500]{0,20}",title:"Debe ser un numero" ,:placeholder => 'Capacidad Minima', 
			    class:"form-control" %> 
			    <br/>	
			   	<%= number_field_tag :capMax ,params[:capMax],pattern:"[0-500]{0,20}",title:"Debe ser un numero", :placeholder => 'Capacidad Maxima', class:"form-control" %> 
		   		<br/>

				<%= label_tag "Ciudad" %> 
				<%= text_field_tag :ciudad ,params[:ciudad],pattern:"[A-Za-z]{0,20}",title:"El nombre no puede contener numeros ni caracteres especiales" ,:placeholder => 'Nombre de la Ciudad', class:"form-control" %>
				<br/>
				<!-- aunque marco no quiera arreglar debemos-->
				<%= label_tag "Fecha de Disponibilidad" %>  
				<br/>
				<h6>Fecha de inicio de reserva </h6>
				<%= date_field_tag :fechaInic,params[:fechaInic], title:"Inicio de reserva", class:"form-control" %> 
				<h6>Fecha de fin de reserva </h6>
				<%= date_field_tag :fechaFin,params[:fechaFin], title:"Fin de reserva", class:"form-control" %> 
				<br/>
				<br/>
				
				<% @tipo=Tipo.where(bajalogica: "false" ) %>

				<%= label_tag "Tipo de Hospedaje" %>
				<%= select_tag :tipoHospe, options_from_collection_for_select(@tipo, "id", "nombre"), prompt: "Seleccionar" %>
				
				
				<%= hidden_field_tag :busqueda , 1 %>
				<br/>
				<br/>

				<%= label_tag "Valoracion del hospedaje" %>
				<%= number_field_tag :valMin ,params[:valMin],pattern:"[0-500]{0,20}",title:"Debe ser un numero" , :placeholder => 'Valoracion Minima', class:"form-control"  %> 
				<br/>
				<%= number_field_tag :valMax ,params[:valMax],pattern:"[0-500]{0,20}",title:"Debe ser un numero" , :placeholder => 'Valoracion Maxima', class:"form-control" %> 
				<br/>

		   		<CENTER> <%= submit_tag "Buscar", class: "btn btn-success btn-lg" %>  
		   				<%= link_to "Volver", hospedajes_path, class: 'btn btn-warning btn-lg' %></CENTER>
		   		<br/>
	   		<% end %>
	   	</div>

	<% if notice %>
		<div class="alert alert-warning"> <p><%= notice %> </p> </div>
	<% end %>	   	
 
 </div>




 
