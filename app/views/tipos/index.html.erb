<div class="centrado">
	<center><h2>Tipos de Hospedaje</h2></center>
	<br/>
	<%= label_tag "Nombre" %>
	<table class="table">
		<% @tipo.each do |tipo| %>
			<% if !(tipo.bajalogica) %>
				<tr>
					<td width="650"> <%= tipo.nombre %> </td>
						<td>
							<%= link_to "Editar", edit_tipo_path(tipo), class: 'btn btn-info btn-xs' %>
							<%= link_to "Eliminar", tipo, method: :delete, class: 'btn btn-danger btn-xs' %>
						</td>                       
					
				</tr>
			<% end %>
		<% end %>
	</table>
	<br/>
	<center><%= link_to "Crear Tipo", new_tipo_path, class: 'btn btn-success btn-lg' %>
	<%= link_to "Volver", hospedajes_path, class: 'btn btn-warning btn-lg' %></center>
	<br/>
	<% if notice && notice== "Modificacion con exito"  %>
  		<div class="alert alert-success"> <p><%= notice %> </p> </div>
  	<% elsif notice && notice== "Eliminacion con exito"	%>
  		<div class="alert alert-success"> <p><%= notice %> </p> </div>
  	<% elsif notice && notice== "Se ha deshabilitado el tipo de hospedaje"	%>
  		<div class="alert alert-warning"> <p><%= notice %> </p> </div>
    <% end %>
</div>
