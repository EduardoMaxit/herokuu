<div class="centrado6">

	<h2><CENTER>Solicitud de cuenta Premium</CENTER></h2>
	<br/>
	<h6><CENTER>Todos los casilleros son obligatorios</CENTER></h6>
	<div class="col-md-6 col-md-offset-3">
		<br/>
		<div class="form-group has-success has-feedback">
			<%= form_tag '/cuentas/validar', :method => "get" do  %>
				<CENTER><%= label_tag "Nombre del Titular" %>
    			<%= text_field_tag :nombre , params[:nombre],pattern:"[A-Za-z]{0,20}",title:"El nombre no puede contener numeros ni caracteres especiales" ,:placeholder => 'Nombre del Titular', required: true ,class:"form-control"%><br />
    			<%= label_tag "Apellido del Titular" %>
    			<%= text_field_tag :apellido ,params[:apellido],pattern:"[A-Za-z]{0,20}",title:"El nombre no puede contener numeros ni caracteres especiales" ,:placeholder => 'Apellido del Titular', required: true ,class:"form-control"%><br />
    			<%= label_tag "Elija su tarjeta de credito" %></CENTER>

				<h5> <%= radio_button_tag :tarjeta, 'American Express' , checked: true %> American Express </h5>
				<h5> <%= radio_button_tag :tarjeta, 'Cabal' %> Cabal </h5>
				<h5> <%= radio_button_tag :tarjeta, 'Italcred' %> Italcred </h5>
				<h5> <%= radio_button_tag :tarjeta, 'Master card' %> Master Card </h5>
				<h5> <%= radio_button_tag :tarjeta, 'Tarjeta Naranja' %> Tarjeta Naranja </h5>
				<h5> <%= radio_button_tag :tarjeta, 'Visa'  %> Visa </h5>

				<br />

				<CENTER><%= label_tag "Numero de la tarjeta" %>
	
				<%= number_field_tag :numero ,nil, :placeholder => 'Ingrese los 16 digitos de su tarjeta', required: true ,class:"form-control" %><br/></CENTER>

				<br />

     			<CENTER><%= label_tag "Ingrese el codigo de Seguridad" %>
     
    			<%= password_field_tag :codigo ,nil, :placeholder => 'Ingrese los 3 digitos de seguridad', required: true ,class:"form-control"  %><br/></CENTER>
    	
				<br />
				<CENTER> <%= submit_tag "Realizar Pago", class: "btn btn-success btn-lg" %>
  			 			<%= link_to "Volver", hospedajes_path, class: 'btn btn-warning btn-lg' %></CENTER>
	
  				<br/>
  			</div>
  			<% end %>

  	<% if notice %>
		<div class="alert alert-warning"> <p><%= notice %> </p> </div>
	<% end %>	 
  		
	</div>
 </div>
 
